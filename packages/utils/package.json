{
    "name": "@sooohka/utils",
    "version": "0.0.0",
    "private": true,
    "description": "utils integration for monorepo projects.",
    "license": "MIT",
    "type": "module",
    "exports": {
        ".": "./src/index.ts"
    },
    "scripts": {
        "dev": "nodemon --watch 'src/**/*.ts' --ext 'ts' --exec tsx ./src/index.ts",
        "build": "tsc",
        "clean": "git clean -xdf .cache .turbo dist node_modules",
        "test": "vitest",
        "test:watch": "vitest watch",
        "typecheck": "tsc --noEmit --emitDeclarationOnly false"
    },
    "dependencies": {
        "@sooohka/queue": "workspace:*"
    },
    "devDependencies": {
        "@sooohka/tsconfig": "workspace:*",
        "@types/node": "^24.7.0",
        "nodemon": "^3.1.10",
        "tsx": "^4.20.6"
    }
}
